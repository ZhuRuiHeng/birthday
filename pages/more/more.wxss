.recentBirthday{
     margin: 0 auto;
     width: 302px;
}
 .recentBirthday .title{
     margin: 19px 0 2px 0;
     width: 100%;
     font-family: PingFangSC-Regular;
     font-size: 13px;
     color: #999999;
}
 .recentBirthday .birthdayInfo{
     padding-top: 14px;
     width: 100%;
     height: 87px;
     border-bottom: 1px solid #EAEAEA;
     box-sizing: border-box;
     position: relative;
}
 .recentBirthday .birthdayInfo .left{
     float: left;
}
 .recentBirthday .birthdayInfo .left wx-image{
     float: left;
     margin-right: 13px;
     width: 38px;
     height: 38px;
     border-radius: 50%;
}
 .recentBirthday .birthdayInfo .left .msg{
     float: left;
}
 .recentBirthday .birthdayInfo .left .msg .name{
     margin-bottom: 2px;
     font-family: PingFangSC-Regular;
     font-size: 15px;
     color: #333333;
     width: 187px;
     height: 21px;
     line-height: 21px;
     overflow:hidden;
     display:-webkit-box;
     -webkit-line-clamp:1;
     -webkit-box-orient:vertical 
}
 .recentBirthday .birthdayInfo .left .msg .date{
     font-family: PingFangSC-Light;
     font-size: 13px;
     color: #999999;
}
 .recentBirthday .birthdayInfo .right{
     float: right;
     position: absolute;
     right: 10rpx;
     top:20rpx;
}
 .recentBirthday .birthdayInfo .day{
     text-align: right;
     font-family: PingFangSC-Regular;
     font-size: 11px;
     color: #FF3939;
}
 .recentBirthday .birthdayInfo .nextBirthday{
     text-align: right;
     font-family: PingFangSC-Light;
     font-size: 15px;
     border:1px solid #000;
     color: #000;
     padding: 0 10rpx;
}
 .monthBirthday{
     margin: 0 auto;
     width: 302px;
}
