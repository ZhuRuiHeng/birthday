.container{ font-family: PingFangSC-Medium; font-size: 13px; text-align: center; color: #333; }
.today-star{ font-family: PingFangSC-Regular; height: 52px; line-height: 52px; color: #999; font-size: 13px; display: -webkit-flex; display: flex; -webkit-justify-content: space-between; justify-content: space-between; padding:0 28px; }
wx-swiper{ width:360px; height: 192px; margin:0 auto; }
wx-swiper wx-image{ width: 100%; height: 192px; }
.star-name{ font-family: PingFangSC-Regular; font-size: 23px; line-height: 23px; padding-top: 19px; padding-bottom: 9px; }
.star-birth{ font-family: PingFangSC-Light; padding-bottom: 19px; font-size: 11px; }
.single-star{ width:302px; height: 144px; padding:14px; display: inline-block; box-sizing: border-box; border: 1px solid #E8E8E8; margin-right: 4px; }
.star-avatar{ width: 115px; height: 115px; border-radius: 100%; margin-right: 45px; }
.star-box{ width: 331px; white-space: nowrap; margin-left: 28px; }
.star-info{ font-family: PingFangSC-Light; display: inline-block; vertical-align: top; }
.star-name-in{ font-size: 19px; padding-top: 14px; padding-bottom: 9px; line-height: 19px; }
.star-birth-in{ padding-bottom: 16px; line-height: 13px; color: #999; }
.star-like{ line-height: 13px; padding-bottom: 9px; }
.star-like wx-image{ width:13px; height:13px; display: inline-block; margin-right: 9px; }
.all-star{ padding:0 28px 0 20px; }
.star{ margin-bottom: 19px; display: -webkit-flex; display: flex; }
.prize{ width:24px; height:54px; margin-right: 12px; line-height: 54px; color: #999; display: inline-block; }
.prize wx-image{ width:24px; height:54px; }
.star-detail{ display: -webkit-flex; display: flex; width:273px; }
.star-detail > wx-image{ width: 57px; height: 57px; border-radius: 100%; margin-right: 33px; }
.star-detail .name{ font-family: PingFangSC-Regular; font-size: 15px; padding-bottom: 9px; line-height: 15px; }
.star-detail .birth{ font-family: PingFangSC-Light; color: #999; line-height: 13px; padding-bottom: 9px; }
.star-detail .star-like{ font-family: PingFangSC-Light; color: #999; line-height: 13px; display: inline-block; margin-right:19px; }
.star-list-title{ height:43px; width:298px; margin: 57px auto 0; background: url("http://ovhvevt35.bkt.clouddn.com/day/star_list_title.png"); -webkit-background-size: 100%; background-size: 100%; color: #FF3939; line-height: 43px; font-size: 19px; }
.top20{ padding:28px 28px; display: -webkit-flex; display: flex; -webkit-justify-content: space-between; justify-content: space-between; font-family:PingFangSC-Regular; line-height:24px; color:#999; }
.top20 wx-image{ width: 57px; height: 24px; }
.more{ position:relative; width:43px; text-align:left; }
.more::after{ border:5px solid #999; border-right:5px solid transparent; border-top:2px solid transparent; border-bottom:2px solid transparent; content:""; width:0; height:0; position:absolute; top:50%; -webkit-transform:translate3d(0,-50%,0); transform:translate3d(0,-50%,0); right:-2px; }
