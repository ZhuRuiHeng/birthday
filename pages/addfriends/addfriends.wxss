
.separateLine { width: 100%; height: 3px; background: #f9f9f9; }
.otherInfo { margin: 0 28px; height: 48px; display: -webkit-flex; display: flex; -webkit-justify-content: space-between; justify-content: space-between; -webkit-align-items: center; align-items: center; width: 90%;}
.otherInfo-desc {  height: 20px;  line-height: 20px; font-family: PingFangSC-Light; font-size: 28rpx; color:#333; }
.grey { color: #999; }
.red { color:#ff3939; }
.otherInfo-content {  width: 189px; height: 13px; line-height: 13px; font-family: PingFangSC-Light; font-size: 13px; text-align: right; padding-right:20rpx;}
.otherInfo-desc-import { width: 192px; }
.otherInfo-desc-importContent { width: 72px; }
.otherInfo-guideIcon {  width: 5px; height: 5px; background-repeat: no-repeat; background-image: url("http://ovhvevt35.bkt.clouddn.com/birthwall_rightArrow.png"); background-size: contain; }
.bindHint-bg { position: fixed; z-index: 5; left: 0; top: 0; width: 100%; height: 100%; background: rgba(51, 51, 51, 0.2); }
.bindHint-main { margin: 167px 14px 0; padding-top: 38px; height: 185px; background: #fff; border-radius: 3px; }
.bindHint-title { margin: 1px auto 0; width: 70%; height: 15px; line-height: 15px; font-family: PingFangSC-Regular; font-size: 15px; text-align: center; color: #333; }
.bindHint-phone { margin: 14px auto 0; width: 70%; height: 15px; line-height: 15px; font-family: PingFangSC-Regular; font-size: 15px; text-align: center; color: #FF3939; }
.bindHint-remark { margin: 28px auto 0; width: 70%; height: 15px; line-height: 15px; font-family: PingFangSC-Regular; font-size: 11px; text-align: center; color: #999; }
.bindHint-close { margin: 19px auto 0; width: 216px; height: 38px; line-height: 38px; font-family: PingFangSC-Regular; font-size: 15px; text-align: center; color: #FF3939; border: 1px solid #FF3939; border-radius: 1px; }
.otherInfo{
  position: relative;
}
.otherInfo:after{
  content:" ";
  display: inline-block;
  width:100%;
  position:absolute;
  bottom:0;
  left:0;
  border:1px solid #F7F7F7;
  -webkit-transform:scaleY(0.5);
  transform:scaleY(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
}
.contact-button{
  position: absolute;
  top:20rpx;
  right:0;
  opacity: 0;
}