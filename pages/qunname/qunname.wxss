.container{ padding: 26rpx 28rpx 0; }
.normal-birth{ padding: 7px 0; box-sizing: border-box; display: -webkit-flex; display: flex; -webkit-justify-content: space-between; justify-content: space-between; border-bottom: 1px solid #EAEAEA; background: #fff; width:90%}
.normal-birth .birth-member-info{ padding: 0; }
.normal-birth .birth-member-info{ display: -webkit-flex; display: flex; }
.normal-birth .birth-member-info .avatar{ width: 38px; margin-right: 13px; }
.normal-birth .birth-member-info .mate-name{ font-size: 15px; color: #333; padding-bottom: 9px; }
.normal-birth .birth-member-info .mate-name wx-image{ display: inline-block; width: 15px; height:14px; margin-left: 9px; vertical-align: middle; }
.normal-birth .birth-member-info .mate-birth{ font-size: 13px; color: #999; }
.normal-birth .birth-member-info .avatar wx-image{ width:38px; height:38px; border-radius:100%; }
.mask{ position: fixed; width: 100vw; height: 100vh; top:0; background-color: rgba(0,0,0,0.2); }
.mask .tips{ position: absolute; top: 20%; left: 50%; -webkit-transform: translate3d(-50%,0,0); transform: translate3d(-50%,0,0); width:302px; background: #fff; text-align: center; padding:30px 19px 9px; -webkit-box-sizing: border-box; box-sizing: border-box; text-align: center; font-size: 15px; }
.tips .line1{ font-size: 17px; color: #333; padding-bottom: 10px; }
.tips .line2{ font-size: 13px; color: #999; padding-bottom: 19px; }
.change-name{ border-bottom: 1px solid #333; height: 34px; color: #333; line-height: 34px; margin:0 21px 33px; }
.btn-box{ display: -webkit-flex; display: flex; -webkit-justify-content: space-between; justify-content: space-between; }
.cancel-btn{ width: 129px; height: 38px; color:#333; border: 1px solid #333; line-height: 38px; box-sizing: border-box; }
.submit-btn{ width: 129px; height: 38px; color:#333; border: 1px solid #F53A30; line-height: 38px; box-sizing: border-box; color: #F53A30; }
/*弹窗  */
.bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.6;
  background: #000;
  z-index: 3;
}
.drawer_box {  
  width: 650rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 50%;  
  left: 0;  
  z-index: 1001;  
  background: #fff;  
  margin: -150px 50rpx 0 50rpx;  
  border-radius: 3px;  
  padding: 40rpx 0;
}  
.drawer_title{  
  padding:24rpx;  
  font: 20px "microsoft yahei";  
  text-align: center;  
}  
.drawer_box .little{
  font-size: 24rpx;
  color:#626262;
  text-align: center;
}
.top.grid input{
  height: 62rpx;  
  line-height: 62rpx;
  font-size: 28rpx;
  text-align: center;
  border-bottom: 1px solid #000;
  margin: 30rpx;
}
.button{
  width: 80%;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  font-size: 26rpx;
 
}
.button .btn_no{
  border:1px solid #ddd;
  padding: 10rpx 45rpx;
}
.button .btn_ok{
  border:1px solid #ff4444;
  padding: 10rpx 45rpx;
}
  
