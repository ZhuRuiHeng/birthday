/* pages/inform/inform.wxss */
.container{
     font-size: 13px;
     color: #666;
     text-align: center;
}
 .banner{
     width: 100%;
     height: 238px;
     background-size: 100% 100%;
     padding: 199px 0 0;
     box-sizing: border-box;
}
 .music{
     width: 100%;
     height:38px;
     background-color: rgba(0,0,0,0.5);
     color: #fff;
     line-height: 38px;
     display: -webkit-flex;
     display: flex;
     padding-left: 28px;
     box-sizing: border-box;
}
 .music wx-image{
     width: 21px;
     height:21px;
     margin:8px 13px 0 0;
}
 .luna_birth{
     font-family: BodoniSvtyTwoITCTT-Book;
     color: #999;
     line-height: 13px;
     padding-top: 28px;
}
 .birth{
     font-family: BodoniSvtyTwoITCTT-Book;
     font-size: 23px;
     color: #333;
     padding-top: 9px;
}
 .pf-l{
     font-family: PingFangSC-Light;
}
 .word-1{
     font-size: 23px;
     color: #333;
     padding-top: 37px;
     padding-bottom: 36px;
}
 .summary,.source{
     padding: 0 28px;
     font-size: 11px;
     line-height: 23px;
     text-align: right;
     color: #999999;
}
 .btnbox{
     padding: 14px 28px;
     margin-top: 14px;
     display: -webkit-flex;
     display: flex;
     -webkit-justify-content: space-between;
     justify-content: space-between;
}
 .btnbox-detail{
     padding: 14px 0;
     margin-top: 14px;
     display: -webkit-flex;
     display: flex;
     -webkit-justify-content: space-between;
     justify-content: space-between;
}
 .line{
     height: 9px;
     background: #F8F8F8;
     width: 100%;
}
 .think-num{
     color: #999999;
     line-height: 28px;
     display: inline-block;
     text-align: left;
     -webkit-flex: 1;
     flex: 1;
}
 .think-icon{
     width: 28px;
     height: 28px;
     margin-right: 9px;
     display: inline-block;
}
 .share-icon{
     width: 20px;
     height: 17px;
     margin:4px 0;
     display: inline-block;
}
 .person{
     padding: 38px 28px 0;
}
 .person-header{
     display: -webkit-flex;
     display: flex;
     color: #999999;
     font-size: 23px;
     font-family:BodoniSvtyTwoITCTT-Book;
     font-weight: bold;
     padding-bottom: 38px;
}
 .person-header wx-image{
     width: 220px;
     height: 220px;
     margin-left: 7px;
     border-radius: 100%;
}
 .year{
     font-family:BodoniSvtyTwoITCTT-Book;
     color: #333;
     font-size: 23px;
     margin-bottom: 8px;
}
 .tag{
     margin-bottom: 39px;
     font-size: 15px;
     font-family: PingFangSC-Regular;
}
 .desc{
     font-size: 15px;
     color: #666666;
     line-height: 28px;
     text-align: left;
     display: block;
}
 .page{
     display: -webkit-flex;
     display: flex;
     -webkit-justify-content: space-between;
     justify-content: space-between;
     text-align:center;
     height: 57px;
     line-height: 38px;
     box-sizing: border-box;
     padding:9px 0;
     width: 50%;
}
  .before{
     -webkit-flex:1;
     flex:1;
} 
 .after{
     -webkit-flex:1;
     flex:1;
     border-left:1px solid #999;
}
.list{
  width: 100%;
}
